<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CDriver">
    <EditText
        android:id="@+id/name"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="@string/name"
        android:textColorHint="#8B0000" />

    <EditText
        android:id="@+id/phone_no"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="@string/phone_no"
        android:textColorHint="#8B0000" />

    <EditText
        android:id="@+id/request_work"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="271dp"
        android:ems="10"
        android:gravity="start|top"
        android:textColorHint="@color/colorPrimary"
        android:hint="@string/request_work"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/Address_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="255dp"
        android:ems="10"
        android:textColorHint="#663300"
        android:hint="@string/address_line1"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/address_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="188dp"
        android:ems="10"
        android:textColorHint="#663300"
        android:hint="@string/address_line2"
        android:inputType="textPostalAddress" />
    <Button
        android:id="@+id/finish_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="43dp"
        android:text="@string/finish_button" />


</RelativeLayout>